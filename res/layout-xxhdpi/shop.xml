<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/homelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/spacewall" >

    <include layout="@layout/statusbar" android:id="@+id/status"/>

    <ScrollView
        android:id="@+id/itemlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iteminfo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>
	<include layout="@layout/menubar" android:id="@+id/menu"/>

	<TextView
	    android:id="@+id/item"
	    android:layout_width="400dp"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/status"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="15dp"
	    android:background="@color/cornsilk"
	    android:gravity="center"
	    android:text="@string/items"
	    android:textAppearance="?android:attr/textAppearanceLarge"
	    android:textSize="25sp" />
	<TextView
	    android:id="@+id/iteminfo"
	    android:layout_width="400dp"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/item"
	    android:layout_centerHorizontal="true"
	    android:text="@string/iteminfo"
	    android:textSize="20sp"
	    android:background="@color/cornsilk" />

</RelativeLayout>