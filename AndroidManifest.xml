<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="galaxysoftware.galaxycatcherextra_android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application
        android:allowClearUserData="true"
        android:hardwareAccelerated="true"
        android:allowBackup="false"
        android:isGame="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:largeHeap="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:name=".GameControlManager">

        <activity android:name=".Boot" android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Home" android:screenOrientation="portrait" />
        <activity android:name=".StartWithAnime" android:screenOrientation="portrait" />
        <activity android:name=".NormalStage" android:screenOrientation="portrait" />
        <activity android:name=".StageClear" android:screenOrientation="portrait" />
        <activity android:name=".Setup" android:screenOrientation="portrait"/>
        <activity android:name=".Tutorial" android:screenOrientation="portrait"/>
        <activity android:name=".ThirdStage" android:screenOrientation="portrait"/>
        <activity android:name=".FourthStage" android:screenOrientation="portrait"/>
    </application>

</manifest>